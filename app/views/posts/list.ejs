<ul class="breadcrumb">
    <li><a href="/">Admin</a> <span class="divider">/</span></li>
    <li class="active"><a href="<%- pathTo.posts() %>">posts</a> <span class="divider">/</span></li>
</ul>

<div class="page-header">
    <h1>Listes des posts</h1>
</div>

<div class="row">
    <div class="span12">
        <% if (posts.length > 0) { %>
        	<div>
                <% posts.forEach(function (post) { %>
                	<div>
                		<%- link_to(post.title, pathTo.postsShow(post.id))  %>
                		<p><%= post.content %></p>
                		<p><%= post.createdAt %></p>
                		<p><%= post.userId %></p>
                	</div>
                <% }); %>
        </div>
        <% } else { %>
        <p class="alert alert-block alert-info">
            <strong>No posts were found.</strong>
        </p>
        <% } %>
    </div>
</div>
